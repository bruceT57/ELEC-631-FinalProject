# Production Environment Configuration for Namecheap Stellar
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration (Use MongoDB Atlas)
# Get your connection string from https://cloud.mongodb.com
# Format: mongodb+srv://<username>:<password>@cluster.mongodb.net/<database>
MONGODB_URI="Fill the MongoDB Generated Link"

# JWT Configuration
# Generate a secure random string for production (at least 32 characters)
JWT_SECRET="Fill the String in there"
JWT_EXPIRES_IN=365d

# OpenAI API Configuration (Optional - for AI difficulty ranking)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# URL Configuration
# Replace with your actual domain from Namecheap
FRONTEND_URL=https://oasustutoringtool.live
GATEWAY_URL=https://oasustutoringtool.live
CORS_ORIGIN=https://oasustutoringtool.live

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
